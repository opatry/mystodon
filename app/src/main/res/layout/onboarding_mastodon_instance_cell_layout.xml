<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/onboarding_mastodon_instance_cell_background"
    tools:showIn="@layout/onboarding_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/onboarding_mastodon_instance_cell_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="8dp"
            tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/onboarding_mastodon_instance_cell_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="?attr/textAppearanceHeadline6"
                tools:text="@sample/instances.json/instances/name" />

            <TextView
                android:id="@+id/onboarding_mastodon_instance_cell_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAppearance="?attr/textAppearanceListItemSecondary"
                tools:text="@sample/instances.json/instances/info/short_description" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/hspacer_8"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:showDividers="middle">
                <!-- FIXME drawable size -->
                <TextView
                    android:id="@+id/onboarding_mastodon_instance_cell_user_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_outline_supervisor_account_24"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:textAppearance="?attr/textAppearanceCaption"
                    tools:text="42" />

                <TextView
                    android:id="@+id/onboarding_mastodon_instance_cell_languages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_language_24"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:textAllCaps="true"
                    android:textAppearance="?attr/textAppearanceCaption"
                    tools:text="en" />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/onboarding_mastodon_instance_cell_exact_match"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_check_circle_outline_24"
                    android:visibility="gone"
                    tools:visibility="visible"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
